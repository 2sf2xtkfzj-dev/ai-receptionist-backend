# ============================================
# AI Receptionist Backend - Environment Config
# ============================================

# Server
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/ai_receptionist?schema=public"

# Redis (for BullMQ)
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Webhook Security
WEBHOOK_SECRET="your-webhook-signing-secret-change-in-production"

# Twilio (optional for local testing with mocks)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_WEBHOOK_URL="https://your-domain.com/webhooks/twilio"

# Vapi (optional for local testing with mocks)
VAPI_API_KEY="your-vapi-api-key"
VAPI_WEBHOOK_SECRET="your-vapi-webhook-secret"
VAPI_WEBHOOK_URL="https://your-domain.com/webhooks/vapi"

# n8n Integration (outbound webhooks)
N8N_WEBHOOK_URL="https://your-n8n-instance.com/webhook/ai-receptionist"
N8N_SIGNATURE_SECRET="your-n8n-signing-secret"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"
